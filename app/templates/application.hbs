<div class="container">
  <div class="header">
    <h2><a href="/">Kosh Beats</a></h2>
    <!--<h1>{{playbackService.display}}</h1>-->
    <!--<h2>{{playbackService.tickInterval}}ms ({{playbackService.tempo}}bpm)</h2>-->
    <span>
      <a href="https://thefonso.com">@thefonso</a> |
      <a href="https://github.com/thefonso/kosh-beats">Source</a>
    </span>
  </div>

  <br style="clear: both" />

  <div class="playback">
    <div class="btn-toolbar">
      {{#if isActive}}
        <button type="button" class="btn btn-danger" {{action 'stop'}}>
          <i class="icon-stop"></i>
        </button>
      {{else}}
        <button type="button" class="btn" {{action 'play'}}>
          <i class="icon-play"></i>
        </button>
      {{/if}}

      <div class="btn-group"></div>

      <div class="btn-group">
        <button type="button" class="btn" {{action 'decreaseTempo'}}>
          <i class="icon-minus-sign"></i>
        </button>
        <button type="button" class="btn"><strong>{{playbackService.tempo}} bpm</strong></button>
        <button type="button" class="btn" {{action 'increaseTempo'}}>
          <i class="icon-plus-sign"></i>
        </button>
      </div>

      <div class="btn-group">
        <button type="button" class="btn"><strong>{{playbackService.display}}</strong></button>
      </div>

      <div class="dropdown show" style="float: right;">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          Dropdown link
        </a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <a class="dropdown-item" href="#">Action</a>
          <a class="dropdown-item" href="#">Another action</a>
          <a class="dropdown-item" href="#">Something else here</a>
        </div>
      </div>
    </div>
  </div>



</div>









